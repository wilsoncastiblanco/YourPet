<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".modules.newRecord.NewRecord">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:orientation="vertical">
        <include layout="@layout/card_title"/>
        <include layout="@layout/card_sale"/>
        <include layout="@layout/card_price"/>
        <include layout="@layout/card_area"/>
        <include layout="@layout/card_kind_of_property"/>
        <include layout="@layout/card_description"/>
    </LinearLayout>


</android.support.v4.widget.NestedScrollView>